<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/parent.contentLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    app:cardBackgroundColor="#787877"
    android:id="@+id/cardvendor"
    android:layout_row="0"
    android:fitsSystemWindows="true"
    android:layout_rowWeight="1"
    android:layout_column="0"
    android:layout_columnWeight="1"
    android:layout_gravity="fill"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp"
    app:cardUseCompatPadding="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/addedimg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/featuredNewsContentColor"
                android:src="@drawable/loading"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

        <net.colindodd.gradientlayout.GradientRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minHeight="100dp"
            android:padding="10dp"
            gl:end_color="@color/gradientLightYellow"
            gl:orientation="LEFT_RIGHT"
            gl:start_color="@color/testingnews"
            tools:ignore="MissingClass">


            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="9dp"
                android:layout_marginTop="10dp"
                android:text="Shop Category:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/category"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/category"
                android:text="Carpentar"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/category"
                android:layout_alignTop="@+id/textView20"
                android:layout_marginStart="0dp"
                android:layout_marginTop="1dp"
                android:text="Address:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView18"
                android:layout_alignStart="@+id/textView18"
                android:layout_marginStart="0dp"
                android:layout_marginTop="13dp"
                android:text="Gol bazar,bilapur"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView19"
                android:layout_alignTop="@+id/textView30"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:text="Listed By:"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView20"
                android:layout_alignStart="@+id/textView20"
                android:layout_marginStart="1dp"
                android:layout_marginTop="16dp"
                android:text="Om Kumar Yadav"
                android:textColor="@color/colorPrimaryDark" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView30"
                android:layout_alignStart="@+id/textView29"
                android:layout_marginStart="0dp"
                android:layout_marginTop="13dp"
                android:text="To see on google maps click on get location." />

            <Button
                android:id="@+id/desopen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/maps"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="60dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="9dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/circlecornerbutton"
                android:text="  Description  "
                android:textStyle="bold" />

            <Button
                android:id="@+id/maps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView55"
                android:layout_alignStart="@+id/textView55"
                android:layout_marginStart="0dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/circlecornerbutton"
                android:text="  Get Location  "
                android:textStyle="bold" />

        </net.colindodd.gradientlayout.GradientRelativeLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>